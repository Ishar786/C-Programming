// Online C compiler to run C program online
#include <stdio.h>

int main() 
{
    int num=0, bit=0;
    printf(" enter a decimal number: ");
    scanf("%d", &num);
    printf("binary equivalent......\n");
    if(num==0) printf("\n0\n");
    while(num/2!=0)
    {
        bit = num%2;
        printf("%d", bit);
        num = num/2;
    }
    printf("%d", bit);
    printf("\n\n");
    printf("Sheik Ishar");
    return 0;
}
