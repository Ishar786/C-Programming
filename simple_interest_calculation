// Online C compiler to run C program online
#include <stdio.h>

int main() 
{
   float p,n,r, si, tax, final; 
    printf("simple interest\n");
    printf("-------------------------------------\n");
    
    printf("enter the principle amount: ");
    scanf("\t%f", &p);
    printf("enter the time period: ");
    scanf("\t%f", &n);
    printf("enter the interest rate: ");
    scanf("\t%f", &r);
    si = p*n*r/100;
    tax = si*0.1;
    final = p + si - tax;
    printf("simple interest is: \t\t%0.2f\n", si);
    printf("tax for the government is: \t%0.2f\n", tax);
    printf("final amout is: \t\t%0.2f\n", final);
    
   
    printf("\n\nSheik Ishar");
    return 0;
}
